---
import type { CollectionEntry } from 'astro:content';
import { CollectionsNames } from '../../constants/global';
import { getContentEntry } from '../../utils/collection-handler';
interface Props {
  language: string;
}

const { language } = Astro.props;

const { data: projectsCollection }: CollectionEntry<CollectionsNames.PROJECTS> =
  await getContentEntry(CollectionsNames.PROJECTS, language);
---

<section class='main-projects' id='projects'>
  <article>
    <h2>{projectsCollection.title}<hr /></h2>
    <p>
      {projectsCollection.description}
    </p>
  </article>
</section>

<style>
  .main-projects {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }
</style>
